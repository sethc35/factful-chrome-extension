{
    "name": "Factful: Integrated AI Writing Assistant and Environment",
    "version": "1.2",
    "manifest_version": 3,
    "background": {
      "service_worker": "backend.js"
    },
    "content_scripts": [
      {
        "matches": ["*://docs.google.com/document/*"],
        "js": ["gdocs.js"],
        "run_at": "document_start",
        "world": "MAIN"
      },
      {
        "matches": ["<all_urls>"],
        "exclude_matches": ["*://docs.google.com/*"],
        "js": ["extension.js"],
        "css": ["styles.css"],
        "run_at": "document_start"
      }
    ],
    "action": {
      "default_icon": {
        "16": "assets/factful-icon-transparent.png",
        "48": "assets/factful-icon-transparent.png",
        "128": "assets/factful-icon-transparent.png"
      },
      "default_popup": "widget.html"
    },
    "side_panel": {
      "default_path": "panel.html",
      "default_icon": "assets/factful-icon-transparent.png",
      "open_panel_action": "auto"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com"
    },
    "web_accessible_resources": [{
      "resources": [
        "assets/*",
        "panel.html",
        "panel.css",
        "scripts.js"
      ],
      "matches": ["<all_urls>"]
    }]
  }
  