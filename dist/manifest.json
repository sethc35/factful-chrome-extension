{
    "name": "Factful: Integrated AI Writing Assistant and Environment",
    "version": "1.2",
    "manifest_version": 3,
    "permissions": [
      "storage"
    ],
    "background": {
      "service_worker": "backend.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["*://docs.google.com/document/*"],
        "all_frames": true,
        "js": ["gdocs-main.js"],
        "run_at": "document_start",
        "world": "MAIN"
      },
      {
        "matches": ["*://docs.google.com/document/*"],
        "all_frames": true,
        "js": ["gdocs-authenticator.js"],
        "run_at": "document_start"
      },    
      {
        "matches": ["<all_urls>"],
        "exclude_matches": ["*://docs.google.com/*", "*://app.factful.io/*"],
        "js": ["extension-main.js"],
        "all_frames": true,
        "run_at": "document_start"
      }
    ],
    "action": {
      "default_icon": {
        "16": "assets/factful-icon-transparent.png",
        "48": "assets/factful-icon-transparent.png",
        "128": "assets/factful-icon-transparent.png"
      },
      "default_popup": "widget.html"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com; connect-src 'self' https://ybxboifzbpuhrqbbcneb.supabase.co"
    },
    "web_accessible_resources": [{
      "resources": [
        "assets/*",
        "*.css"
      ],
      "matches": ["<all_urls>"]
    }],
    "externally_connectable": {
      "matches": [
        "chrome-extension://iamfchhcgpeoccidbmhicljggniljjgi/*"
      ]
    }
  }
  